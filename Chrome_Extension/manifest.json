{
  "manifest_version": 2,

  "name": "UT Football Countdown",
  "short_name": "Vols",
  "description": "This extensions counts down the time until UT football",
  "version": "1.1",

  "browser_action": {
    "default_icon": "logo16.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "css": ["style.css", "bootstrap.min.css"],
      "js": ["script.js", "jquery-2.1.4.min.js", "angular.min.js"]
    }
  ],
  "web_accessible_resources": [
      "img/de3.jpg",
      "img/dobbs1.jpg",
      "img/north.jpg"
    ],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  }
}
